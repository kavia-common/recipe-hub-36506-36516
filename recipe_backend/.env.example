# Copy this file to .env and update the values accordingly.

# Database connection URL (e.g., for Postgres)
# Format: postgresql+psycopg2://USER:PASSWORD@HOST:PORT/DB_NAME
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/recipehub

# JWT configuration
JWT_SECRET=change_me_super_secret
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS allowed origins (comma-separated). Use "*" to allow all.
# Example: http://localhost:3000,http://127.0.0.1:3000
CORS_ORIGINS=http://localhost:3000
